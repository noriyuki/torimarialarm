<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <TextView
        android:id="@+id/clockView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="27dp"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="60sp"
        android:typeface="sans" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/clockView"
        android:layout_below="@+id/clockView"
        android:layout_marginRight="14dp"
        android:layout_marginTop="51dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/colored_button"
            android:onClick="onClickStartManageButton"
            android:text="@string/start_manage_button_label"
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/colored_button"
            android:onClick="onClickStartPhotoGalleryButton"
            android:text="@string/start_photo_gallery_button_label"
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:typeface="sans" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/colored_button"
            android:onClick="onClickFacebookButton"
            android:text="@string/goto_facebook_button_label"
            android:textColor="#ffffff"
            android:textSize="21sp"
            android:typeface="sans" />
    </LinearLayout>
</RelativeLayout>
